# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in the values

# Django Core Settings
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_50_CHARS_MIN
DEBUG=False
ALLOWED_HOSTS=peykantravelistanbul.com,www.peykantravelistanbul.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/peykan_db

# Redis Cache
REDIS_URL=redis://localhost:6379/1
CACHE_KEY_PREFIX=peykan_prod_
CACHE_TIMEOUT=300

# Session Settings
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin

# CORS Settings
CORS_ALLOWED_ORIGINS=https://peykantravelistanbul.com,https://www.peykantravelistanbul.com
CSRF_TRUSTED_ORIGINS=https://peykantravelistanbul.com,https://www.peykantravelistanbul.com
CSRF_COOKIE_DOMAIN=.peykantravelistanbul.com
CSRF_COOKIE_SECURE=True

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=30
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_JWT_SECRET_KEY

# Email Settings (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@peykantravelistanbul.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Kavenegar SMS
KAVENEGAR_API_KEY=your-kavenegar-api-key

# Payment Gateway
PAYMENT_GATEWAY=stripe
PAYMENT_SECRET_KEY=your-payment-gateway-secret-key

# Static & Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Currency Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,TRY,IRR

# Celery Settings (if using)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS S3 Storage (Optional - for media files)
# DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=your-region
# AWS_S3_CUSTOM_DOMAIN=your-cdn-domain

# Monitoring & Logging (Optional)
# SENTRY_DSN=your-sentry-dsn
